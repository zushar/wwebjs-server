{
  "name": "whatsapp-cluster-root",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for WhatsApp Cluster services",
  "scripts": {
    "bootstrap": "npm install",
    "build": "npm run build --workspaces --if-present",
    "build:gateway": "npm run build -w @whatsapp-cluster/gateway",
    "build:shard": "npm run build -w @whatsapp-cluster/shard",
    "start:gateway": "npm run start:dev -w @whatsapp-cluster/gateway",
    "start:shard": "npm run start:dev -w @whatsapp-cluster/shard",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"packages/**/*.{ts,js,json,md,yaml}\" \"*.{js,json,md,yaml}\" --ignore-path .gitignore"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "rimraf": "^6.0.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "@types/jest": "^29.5.14",
    "@nestjs/testing": "^11.1.0",
    "supertest": "^7.1.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.25.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "typescript-eslint": "^8.31.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "globals": "^16.0.0",
    "@types/node": "^22.15.3",
    "@types/express": "^5.0.1",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.11.24",
    "source-map-support": "^0.5.21"
  }
}
